<?xml version="1.0"?>
<ruleset name="MUNext Coding Standards">
    <description>PHP CodeSniffer configuration for MUNext Job Board Platform</description>
    
    <!-- Show progress and sniff codes -->
    <arg value="ps"/>
    
    <!-- Use colors in output -->
    <arg name="colors"/>
    
    <!-- Parallel processing for speed -->
    <arg name="parallel" value="8"/>
    
    <!-- Paths to check -->
    <file>.</file>
    
    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/assets/vendor/*</exclude-pattern>
    <exclude-pattern>*/resumes_cv/*</exclude-pattern>
    <exclude-pattern>*/avater/*</exclude-pattern>
    <exclude-pattern>*/company_logo/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    
    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12">
        <!-- Allow non-camelCase method names (for legacy compatibility) -->
        <exclude name="PSR1.Methods.CamelCapsMethodName"/>
    </rule>
    
    <!-- Additional security rules -->
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element key="eval" value="null"/>
                <element key="create_function" value="null"/>
                <element key="exec" value="null"/>
                <element key="passthru" value="null"/>
                <element key="shell_exec" value="null"/>
                <element key="system" value="null"/>
            </property>
        </properties>
    </rule>
    
    <!-- Additional code quality rules -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>
    <rule ref="Generic.Commenting.Todo"/>
    <rule ref="Generic.Files.LineEndings"/>
    <rule ref="Generic.Formatting.SpaceAfterCast"/>
    
    <!-- Set maximum line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>
    
    <!-- Complexity checks -->
    <rule ref="Generic.Metrics.CyclomaticComplexity">
        <properties>
            <property name="complexity" value="10"/>
            <property name="absoluteComplexity" value="15"/>
        </properties>
    </rule>
    
    <rule ref="Generic.Metrics.NestingLevel">
        <properties>
            <property name="nestingLevel" value="5"/>
            <property name="absoluteNestingLevel" value="8"/>
        </properties>
    </rule>
</ruleset>
